@page "/contact"

<div class="bg-gradient-to-b from-[#006B6B] to-[#e9efef]">
    @* Header *@
    <div class="px-6 py-3 text-white flex items-center justify-between bg-[#006B6B]">
        <img src="Images/logo.png" alt="logo" class="h-12" />
        <div class="text-bold text-md space-x-12">
            <a href="/">Home</a>
            <a href="/features">Features</a>
            <a href="/contact">Contact Us</a>
            <a href="/register">Register</a>
            <a href="/login">Login</a>
        </div>
    </div>

    @* Contact Section *@
    <div class="px-4 py-12 mx-auto max-w-4xl sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg border-2 border-[#006B6B] shadow-xl">
            <div class="px-6 py-8">
                <h2 class="text-gray-900 mb-8 text-center text-3xl font-bold">Contact Us</h2>
                <p class="text-gray-600 mb-8 text-center">
                    Have questions or suggestions? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
                </p>

                <form class="space-y-6">
                    @* Name Field *@
                    <div>
                        <label for="name" class="text-gray-700 block text-sm font-medium">Name</label>
                        <input type="text"
                               id="name"
                               class="p-2 border-gray-500 block w-full rounded-md border-2 shadow-sm focus:border-[#006B6B] focus:ring focus:ring-[#006B6B] focus:ring-opacity-50"
                               placeholder="Your name"
                               required />
                    </div>

                    @* Email Field *@
                    <div>
                        <label for="email" class="text-gray-700 block text-sm font-medium">Email</label>
                        <input type="email"
                               id="email"
                               class="p-2 border-gray-500 block w-full rounded-md border-2 shadow-sm focus:border-[#006B6B] focus:ring focus:ring-[#006B6B] focus:ring-opacity-50"
                               placeholder="your.email@example.com"
                               required />
                    </div>

                    <div>
                        <label for="Phone" class="text-gray-700 block text-sm font-medium">Phone</label>
                        <input id="Phone"
                                class="p-2 border-gray-500 block w-full rounded-md border-2 shadow-sm focus:border-[#006B6B] focus:ring focus:ring-[#006B6B] focus:ring-opacity-50"
                               placeholder="9845715756"
                                required />
                    </div>

                    @* Message Field *@
                    <div>
                        <label for="message" class="text-gray-700 block text-sm font-medium">Message</label>
                        <textarea id="message"
                                  rows=""
                                  class="p-2 border-gray-500 block w-full rounded-md border-2 shadow-sm focus:border-[#006B6B] focus:ring focus:ring-[#006B6B] focus:ring-opacity-50"
                                  placeholder="Your message here..."
                                  required></textarea>
                    </div>

                    @* Submit Button *@
                    <div class="space-x-4 flex justify-end">
                        <button type="button"
                                class="px-6 py-2 border-gray-500 text-gray-700 rounded-md border text-sm font-medium hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#006B6B]">
                            Cancel
                        </button>
                        <button type="submit"
                                class="px-6 py-2 border-transparent text-white rounded-md border bg-[#006B6B] text-sm font-medium hover:bg-[#005555] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#006B6B]">
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    @* footer *@
    <footer class="text-white bg-[#006B6B]">
        <div class="py-12 mx-auto sm:px-6 lg:px-8">
            <div class="gap-8 grid grid-cols-1 md:grid-cols-4">
                <div class="space-y-2 col-span-1">

                    <img src="Images/logo.png" alt="logo" class="h-16" />
                    <h3 class="mb-2 text-xl font-bold">P.E.T.</h3>
                    <p class="text-gray-300 text-sm">
                        Your trusted companion for expense tracking and financial management.
                    </p>
                    <p class="text-gray-300 text-sm">&copy; 2025 P.E.T. All rights reserved.</p>
                </div>
                <div>
                    <h3 class="mb-4 text-lg font-semibold">Quick Links</h3>
                    <ul class="space-y-2">
                        <li><a href="/" class="text-gray-300 hover:text-white">Home</a></li>
                        <li><a href="/features" class="text-gray-300 hover:text-white">Features</a></li>
                        <li><a href="/contact" class="text-gray-300 hover:text-white">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="mb-4 text-lg font-semibold">Legal</h3>
                    <ul class="space-y-2">
                        <li><a href="/privacy" class="text-gray-300 hover:text-white">Privacy Policy</a></li>
                        <li><a href="/terms" class="text-gray-300 hover:text-white">Terms of Service</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="mb-4 text-lg font-semibold">Connect</h3>
                    <div class="space-x-4 flex">
                        <a href="#">
                            <img src="Images/FB.png" alt="link" class="h-6 w-6" />
                        </a>
                        <a href="#">
                            <img src="Images/X.png" alt="link" class="h-6 w-6" />
                        </a>
                        <a href="#">
                            <img src="Images/instagram.png" alt="link" class="h-6 w-6" />
                        </a>
                        <a href="#">
                            <img src="Images/uiw_linkedin.png" alt="link" class="h-6 w-6" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>